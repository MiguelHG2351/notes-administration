<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title d-flex justify-content-between align-items-center">
                        {{title}}
                        <a href="/notes/edit/{{_id}}"><i class="fas fa-pen-square"></i></a>
                    </h3>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" class="btn btn-block btn-sm btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>