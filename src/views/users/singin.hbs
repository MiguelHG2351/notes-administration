<div class="container bg-primary">
    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h1>Account Login</h1>
            </div>
            <img src="/img/logo.png" alt="Logo de fazweb.com" />
            <div class="card-body">
                <form action="/users/singin" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Ingresa tu nombre" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="email" placeholder="Ingresa tu correo" name="email">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" placeholder="Ingresa tu password" name="password">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">
                            Singin
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>